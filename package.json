{
  "name": "vibechecker",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "frontend",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run frontend:dev\"",
    "frontend:dev": "npm run dev --workspace=@vibechecker/frontend",
    "server:dev": "npm run dev --workspace=@vibechecker/server",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspace=@vibechecker/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
